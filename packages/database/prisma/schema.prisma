// RegIntel Database Schema
// Aligned with ADR-0001 data model requirements

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Auth & Users (NextAuth.js v5 compatible)
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  role          UserRole  @default(VIEWER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  reviews        Review[]
  publications   Publication[]
  auditLogs      AuditLog[]
  searchSessions SearchSession[]
  alerts         UserAlert[]

  @@map("users")
}

enum UserRole {
  VIEWER
  REVIEWER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// RegIntel Core Domain
// ============================================

model SourceItem {
  id              String      @id @default(cuid())
  url             String      @unique
  canonicalPdfUrl String?
  sourceDomain    String
  type            SourceType
  title           String
  publishedAt     DateTime?
  fetchedAt       DateTime    @default(now())
  contentHash     String      @unique
  status          ItemStatus  @default(INTAKE)
  raindropId      String?     @unique
  rssFeedId       String?     // Track which RSS feed ingested this item
  tags            Json        @default("[]") // Array of strings
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  analyses Analysis[]
  reviews  Review[]
  rssFeed  RssFeed?   @relation(fields: [rssFeedId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([publishedAt])
  @@index([sourceDomain])
  @@index([rssFeedId])
  @@map("source_items")
}

enum SourceType {
  GUIDANCE
  WARNING_LETTER
  UNTITLED_LETTER
  MEETING
  APPROVAL
  PRESS
}

enum ItemStatus {
  INTAKE
  REVIEW
  APPROVED
  REJECTED
  PUBLISHED
}

model Analysis {
  id           String   @id @default(cuid())
  sourceItemId String
  summaryMd    String   @db.Text
  impactMd     String   @db.Text
  citations    Json     @default("[]") // Array of {url, locator, quote?}
  modelMeta    Json     @default("{}") // {model, temperature, tokens, etc.}
  createdBy    String?
  createdAt    DateTime @default(now())
  supersedesId String?  @unique

  sourceItem SourceItem @relation(fields: [sourceItemId], references: [id], onDelete: Cascade)
  supersedes Analysis?  @relation("AnalysisHistory", fields: [supersedesId], references: [id])
  superseded Analysis?  @relation("AnalysisHistory")

  @@index([sourceItemId])
  @@map("analyses")
}

model Review {
  id           String         @id @default(cuid())
  sourceItemId String
  reviewerId   String
  decision     ReviewDecision
  notesMd      String?        @db.Text
  createdAt    DateTime       @default(now())

  sourceItem SourceItem @relation(fields: [sourceItemId], references: [id], onDelete: Cascade)
  reviewer   User       @relation(fields: [reviewerId], references: [id])

  @@index([sourceItemId])
  @@index([reviewerId])
  @@map("reviews")
}

enum ReviewDecision {
  APPROVE
  REJECT
  REVISE
}

model Publication {
  id           String   @id @default(cuid())
  week         String // Format: YYYY-WW
  publishedAt  DateTime @default(now())
  publisherId  String
  artifactUrls Json     @default("{}") // {web: "/regintel/2025-01", emailId: "msg_123", slackTs: "1234.56"}
  checksum     String

  publisher User @relation(fields: [publisherId], references: [id])

  @@unique([week])
  @@index([publishedAt])
  @@map("publications")
}

// ============================================
// Audit & Compliance
// ============================================

model AuditLog {
  id       String   @id @default(cuid())
  actor    String
  action   String // e.g., "source_item.approved", "user.role_changed"
  entity   String // e.g., "source_item", "user"
  entityId String
  diff     Json     @default("{}") // {before: {...}, after: {...}}
  at       DateTime @default(now())

  user User @relation(fields: [actor], references: [id])

  @@index([actor])
  @@index([entity, entityId])
  @@index([at])
  @@map("audit_logs")
}

model SearchSession {
  id        String   @id @default(cuid())
  userId    String
  title     String   @default("New Search")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  queries SearchQuery[]

  @@index([userId])
  @@index([createdAt])
  @@map("search_sessions")
}

model SearchQuery {
  id        String   @id @default(cuid())
  sessionId String
  query     String
  results   Json     @default("[]") // Array of search results
  createdAt DateTime @default(now())

  session SearchSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
  @@map("search_queries")
}

// ============================================
// Configuration
// ============================================

model AllowedDomain {
  id                 String    @id @default(cuid())
  domain             String    @unique // e.g., "fda.gov", "ema.europa.eu"
  description        String?   // e.g., "FDA - US Food and Drug Administration"
  active             Boolean   @default(true)
  discoveryInterval  Int       @default(86400) // Seconds between discoveries (default 24 hours)
  lastDiscoveredAt   DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([active])
  @@index([lastDiscoveredAt])
  @@map("allowed_domains")
}

model RssFeed {
  id              String              @id @default(cuid())
  url             String              @unique
  title           String
  description     String?
  classifications RssFeedClassification[] @default([]) // What types to look for
  pollInterval    Int                 @default(3600) // Seconds between polls (default 1 hour)
  active          Boolean             @default(true)
  lastPolledAt    DateTime?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  sourceItems SourceItem[]

  @@index([active])
  @@index([lastPolledAt])
  @@map("rss_feeds")
}

enum RssFeedClassification {
  APPROVAL
  GUIDANCE
  SAFETY_ALERT
  OTHER
}

// ============================================
// Application Configuration
// ============================================

model AppConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  category  String   // e.g., "filtering", "analysis", "general"
  label     String   // Human-readable label
  helpText  String?  // Description for admin UI
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@map("app_config")
}

// ============================================
// LLM Configuration
// ============================================

model LlmConfig {
  id          String      @id @default(cuid())
  name        String      @unique // User-friendly name (e.g., "Local Ollama", "OpenAI GPT-4")
  provider    LlmProvider // OLLAMA, OPENAI, ANTHROPIC, etc.
  model       String      // Model name (e.g., "llama3.2", "gpt-4", "claude-3-5-sonnet")
  baseUrl     String?     // For Ollama or custom endpoints
  apiKey      String?     // For cloud providers (encrypted in production)
  temperature Float       @default(0.7)
  maxTokens   Int         @default(2000)
  active      Boolean     @default(true)
  isDefault   Boolean     @default(false) // Mark one config as default
  capabilities Json       @default("[]") // Array of capabilities: ["graph", "postgres", "general"]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([provider])
  @@index([active])
  @@map("llm_configs")
}

enum LlmProvider {
  OLLAMA
  OPENAI
  ANTHROPIC
  CUSTOM
}

// ============================================
// User Alerts & Notifications
// ============================================

model UserAlert {
  id             String            @id @default(cuid())
  userId         String
  name           String
  filters        Json              @default("[]") // Array of filter objects {type, value}
  maxPosts       Int               @default(30)
  frequency      AlertFrequency
  daysOfWeek     Int[]             // 0=Sun, 1=Mon, 2=Tue, etc.
  timeOfDay      String            // HH:mm format (e.g., "10:00")
  active         Boolean           @default(true)
  lastSentAt     DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([active])
  @@index([lastSentAt])
  @@map("user_alerts")
}

enum AlertFrequency {
  WEEKLY
  BIWEEKLY
  MONTHLY
}

// ============================================
// Graph Configuration (Neo4j Integration)
// ============================================

model GraphConfig {
  id              String                @id @default(cuid())
  name            String                @unique // User-friendly name
  profile         String                @db.Text // Industry/company/focus description
  goals           Json                  @default("[]") // Array of goal strings
  context         String?               @db.Text // Optional context (populations, biomarkers, etc.)
  trustedSources  Json                  @default("[]") // Array of source identifiers
  pgSchemaSnapshot Json                 @default("{}") // Snapshot of PG views/columns at config time
  constraints     Json                  @default("{}") // Configuration constraints/toggles
  status          GraphConfigStatus     @default(DRAFT)
  activeVersion   String?               // Points to active version ID
  createdBy       String
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  versions        GraphConfigVersion[]
  syncRuns        GraphSyncRun[]

  @@index([status])
  @@index([createdBy])
  @@map("graph_configs")
}

enum GraphConfigStatus {
  DRAFT          // Being designed
  PROPOSED       // AI proposal generated
  STAGING        // Deployed to staging
  PRODUCTION     // Promoted to production
  ARCHIVED       // No longer active
}

model GraphConfigVersion {
  id                String           @id @default(cuid())
  configId          String
  version           Int              // Incremental version number
  summary           Json             @default("[]") // Array of summary bullet points
  graphModel        Json             @default("{}") // {nodes: [], relationships: []}
  pgToGraphMapping  Json             @default("{}") // Mapping rules (JSON)
  cypherTemplates   Json             @default("{}") // {nodes: {}, relationships: {}}
  bloomSuggestions  Json             @default("{}") // Bloom perspective config
  neodashSuggestions Json            @default("{}") // NeoDash starter cards
  qaQueries         Json             @default("[]") // Array of QA Cypher queries
  deployedToStaging DateTime?
  deployedToProd    DateTime?
  createdAt         DateTime         @default(now())

  config          GraphConfig        @relation(fields: [configId], references: [id], onDelete: Cascade)
  syncRuns        GraphSyncRun[]

  @@unique([configId, version])
  @@index([configId])
  @@map("graph_config_versions")
}

model GraphSyncRun {
  id                String              @id @default(cuid())
  configId          String
  versionId         String
  runType           GraphSyncRunType
  targetEnvironment GraphEnvironment
  status            GraphSyncStatus
  dryRun            Boolean             @default(false)
  diffReport        Json?               @default("{}") // {nodes: {create, update, noop}, rels: {...}}
  batchSize         Int                 @default(100)
  totalBatches      Int?
  completedBatches  Int                 @default(0)
  checkpointData    Json?               @default("{}") // For resuming
  errorLog          Json?               @default("[]") // Array of error messages
  startedAt         DateTime?
  completedAt       DateTime?
  createdBy         String
  createdAt         DateTime            @default(now())

  config          GraphConfig         @relation(fields: [configId], references: [id], onDelete: Cascade)
  version         GraphConfigVersion  @relation(fields: [versionId], references: [id], onDelete: Cascade)

  @@index([configId])
  @@index([versionId])
  @@index([status])
  @@index([startedAt])
  @@map("graph_sync_runs")
}

enum GraphSyncRunType {
  BACKFILL          // One-time historical backfill
  INCREMENTAL       // Ongoing sync of new/updated records
  VALIDATION        // QA queries only
}

enum GraphEnvironment {
  STAGING
  PRODUCTION
}

enum GraphSyncStatus {
  PENDING           // Queued
  RUNNING           // In progress
  COMPLETED         // Finished successfully
  FAILED            // Error occurred
  CANCELLED         // Manually stopped
}

model GraphAudit {
  id            String   @id @default(cuid())
  configId      String
  versionId     String?
  action        String   // e.g., "config.created", "version.deployed", "sync.completed"
  actor         String   // User ID
  metadata      Json     @default("{}") // Additional context
  createdAt     DateTime @default(now())

  @@index([configId])
  @@index([action])
  @@index([actor])
  @@index([createdAt])
  @@map("graph_audits")
}
